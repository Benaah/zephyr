# Kargo IoT Sensor - Environment Configuration Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control!

# WiFi Configuration
WIFI_SSID=YourWiFiSSID
WIFI_PASSWORD=YourWiFiPassword

# AWS IoT Core Configuration
AWS_IOT_ENDPOINT=xxxxxxxxxxxxxx-ats.iot.us-east-1.amazonaws.com
AWS_IOT_CLIENT_ID=kargo_sensor_001
AWS_IOT_REGION=us-east-1
AWS_IOT_THING_NAME=kargo_sensor_001

# Security Tag (for TLS credentials)
AWS_IOT_SEC_TAG=1

# MQTT Topic Configuration
MQTT_BASE_TOPIC=kargo/sensors
MQTT_PUBLISH_TOPIC=kargo/sensors/${AWS_IOT_CLIENT_ID}/data
MQTT_SUBSCRIBE_TOPIC=kargo/sensors/${AWS_IOT_CLIENT_ID}/commands

# Sensor Configuration
SENSOR_READ_INTERVAL_MINUTES=15
MAX_BUFFERED_READINGS=100

# Certificate Paths (for development)
AWS_ROOT_CA_PATH=certs/AmazonRootCA1.pem
DEVICE_CERT_PATH=certs/device-cert.pem
DEVICE_KEY_PATH=certs/device-key.pem

# Build Configuration
ZEPHYR_BASE=/path/to/zephyr
ZEPHYR_SDK_INSTALL_DIR=/path/to/zephyr-sdk
ESPRESSIF_TOOLCHAIN_PATH=/path/to/.espressif

# Serial Port (for flashing and monitoring)
SERIAL_PORT=/dev/ttyUSB0  # Linux
# SERIAL_PORT=COM3        # Windows

# Optional: BLE Configuration
BLE_DEVICE_NAME=Kargo Sensor
BLE_DIAGNOSTIC_MODE=true

# Optional: Logging Level (0=OFF, 1=ERROR, 2=WARNING, 3=INFO, 4=DEBUG)
LOG_LEVEL=3

# Optional: Power Management
ENABLE_DEEP_SLEEP=true
DEEP_SLEEP_DURATION_SEC=870  # 14.5 minutes (900 - 30 sec margin)
